@inherits LayoutComponentBase

@* page is 100% vh*@
<div class="position-relative vh-100 d-flex flex-column">
    <div class="bg-dark bg-gradient">
        <NavMenu />
    </div>

    @* cascading values allow passing data from child pages to this parent layout *@
    <CascadingValue Value="this">
        @* center body content middle of page *@
        <main class="d-flex flex-grow-1 bg-dark bg-gradient text-white">
            <article class="d-flex flex-grow-1 flex-column container-fluid">
                <div class="row p-5 border-bottom">
                    <div class="col">
                        <h1 class="text-info ">@_Title</h1>
                    </div>
                    <div class="col">
                        <pre class="">@_Description</pre>
                    </div>
                </div>
                <div class="d-flex flex-grow-1">
                    @Body
                </div>
            </article>
        </main>
    </CascadingValue>
</div>

@code {
    public string _Title { get; set; }
    public string _Description { get; set; }

    public void updateLayout(string title, string description)
    {
        _Title = title;
        _Description = description;
        StateHasChanged();
    }
}